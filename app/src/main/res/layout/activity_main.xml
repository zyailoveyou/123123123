<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"



    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.cop.zqc.designmywigete.mytextView

        android:id="@+id/mytextview"
        android:layout_width="192dp"
        android:layout_height="219dp"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:parm1="150"
        custom:parm2="goodforit"
        />

    <Button
        android:id="@+id/playAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="12dp"
        android:text="Play"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toBottomOf="@+id/mytextview" />


    <com.cop.zqc.designmywigete.MyViewGroup
        android:id="@+id/myViewGroup"
        android:layout_width="108dp"
        android:layout_height="118dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_launcher_background"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/center"
            custom:srcCompat="@drawable/center"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="231dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:text="OKOKOK"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="231dp" />
    </com.cop.zqc.designmywigete.MyViewGroup>


</androidx.constraintlayout.widget.ConstraintLayout>